<?xml version="1.0" encoding="UTF-8"?>
<Template>
    <validation>
        <validation-item id="company" type="string" empty="false" maxlength="40"></validation-item>
        <validation-item id="otp" type="string" empty="false" maxlength="10"></validation-item>
        <validation-item id="expiry" type="int" min="5" max="120"></validation-item>
    </validation>
    <Response>
        <Message>Use this OTP ({otp}) to verify your login for {company}. This code expires in {expiry} minutes.</Message>
    </Response>
</Template>