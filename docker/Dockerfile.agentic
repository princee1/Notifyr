FROM notifyr/fastapi:community

ARG INSTALL_DOCLING=false

COPY --chown=notifyr:notifyr ./scripts/docling.sh .

RUN pip install langchain

RUN pip install qdrant-client

RUN pip install neo4j

RUN pip install llama-index-core llama-index-embeddings-openai

RUN pip install llama-index-readers-file

RUN pip install arq

RUN pip install yake 

RUN pip install gensim 

RUN ./docling.sh ${INSTALL_DOCLING}

COPY ./agentic_main.py ./agentic_main.py

COPY ./app/data_tasks.py ./data_tasks.py

