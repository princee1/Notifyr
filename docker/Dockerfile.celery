from debian:bookworm-slim as builder

RUN apt-get update && apt-get install -y --no-install-recommends make  && rm -rf /var/lib/apt/lists/*

RUN  cat <<EOF > Makefile
celery_app = app.tasks.celery_app

###############################      CELERY                     #######################################
celery-docker:
	celery -A app.tasks.celery_app worker --pool=gevent --concurrency=100  --loglevel=info --max-tasks-per-child=2000 --max-memory-per-child=200000

redbeat:
	celery -A app.tasks.celery_app beat -S redbeat.RedBeatScheduler --max-interval 30 --loglevel=info

###############################     HTTPS               #######################################

https_pem:
	openssl req -x509 -newkey rsa:2048 -keyout key.pem -out cert.pem -days 365 -nodes

EOF

FROM notifyr/fastapi:community

RUN pip install gevent

COPY --from=builder /usr/bin/make /usr/bin/make

COPY --from=builder Makefile Makefile

COPY --chmod=755 ./scripts/spawn_celery_worker.sh ./spawn_celery_worker.sh

